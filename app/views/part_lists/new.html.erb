<head>
  <link href='http://fonts.googleapis.com/css?family=Rum+Raisin' rel='stylesheet' type='text/css'>
</head>
<h1>Create a New Subpart</h1>

<%= form_for(@part_list) do |f| %>
  <div class="field">
    <p>title</p> 
    <%= f.text_field :title%>
  </div>
  <div class="field">
    <p>complete?</p> 
    <div class="checkbox">
      <label>
    <%= f.check_box :complete%>
      </label>
  </div>
  </div>
  <div class="field">
    <p>task</p> 
    <% if current_user %>
    <%= f.collection_select :task_id, Task.where(user_id: current_user), :id, :course %>
    <%else %>
    <%= f.collection_select :task_id, Task.all, :id, :course %>
    <% end %>
  </div>
  <div class="field">
    <p>priority</p>
    <%= f.select(:priority, options_for_select([['high', 'high'], ['medium', 'medium'], ['low', 'low']], 3)) %>
  </div>
  <div class="actions">
      <%= f.submit :class => "btn btn-lg btn-primary"%>
  </div>
<% end %>



